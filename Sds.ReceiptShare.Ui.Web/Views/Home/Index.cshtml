@model HomeViewModel 
@{
    ViewData["Title"] = $"{Model.UserName}'s groups";
}

<h2>Hi @Model.UserName</h2>

<a asp-action="Create" asp-controller="Group">Create group</a>

@if (Model.Groups != null && Model.Groups.Any())
{
    <p>You are currently in @Model.Groups.Count groups</p>

    foreach (var item in Model.Groups)
    {
    <h3>@item.Name</h3>
    }
}else{
    <p>You're not in any groups yet</p>
}