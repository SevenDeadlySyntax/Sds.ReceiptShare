@model Sds.ReceiptShare.Ui.Web.Models.Group.AddCurrenciesViewModel

@{
    ViewData["Title"] = "AddCurrencies";
}

<h2>AddCurrencies</h2>

<h4>AddCurrenciesViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCurrencies">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (@Model.CurrencyCheckboxList != null && @Model.CurrencyCheckboxList.Count() > 0)
            {
                for (int i = 0; i < @Model.CurrencyCheckboxList.Count(); i++)
                {
                    <div>
                        <input asp-for="@Model.CurrencyCheckboxList[i].Checked" type="checkbox" />
                        <label asp-for="@Model.CurrencyCheckboxList[i].Checked">@Model.CurrencyCheckboxList[i].Currency.Name</label>
                        <input type="number" step="0.01" asp-for="@Model.CurrencyCheckboxList[i].Rate" value="@Model.CurrencyCheckboxList[i].Rate" />
                        
                        @*If these are not included, all OptionIds become 0 and all OptionName becomes null*@
                        @Html.HiddenFor(x => @Model.CurrencyCheckboxList[i].Currency.Id)
                        @Html.HiddenFor(y => @Model.CurrencyCheckboxList[i].Currency.Name)
                    </div>
                }
            }
            @*@if (@Model.CurrencyCheckboxList != null && @Model.CurrencyCheckboxList.Any())
            {
                foreach(var item in @Model.CurrencyCheckboxList)
                {
                    <div>
                        <input asp-for="@item.Checked" type="checkbox" />
                        <label asp-for="@item.Checked">@item.Currency.Name</label>
                        
                        @Html.HiddenFor(x => item.Currency.Id)
                        @Html.HiddenFor(y => item.Currency.Name)
                    </div>
                }
            }*@
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

